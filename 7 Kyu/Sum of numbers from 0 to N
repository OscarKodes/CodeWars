var SequenceSum = (function() {
  function SequenceSum() {}

  SequenceSum.showSequence = function(count) {
    let numStr = "0";
    let sum = 0;
    
    for (let i = 1; i <= count; i++) {
    
      numStr += "+" + i;
      sum += i;
    }
    
    return count === 0 ? "0=0" : count < 0 ? count + "<0" : numStr + " = " + sum;
  };

  return SequenceSum;

})();
